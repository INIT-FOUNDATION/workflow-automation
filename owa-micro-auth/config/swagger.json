{
  "swagger": "2.0",
  "info": {
    "title": "owa-micro-auth",
    "description": "API Swagger for owa-micro-auth",
    "version": "1.0.0"
  },
  "host": "localhost:9001",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/api/v1/auth/health": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Health Check API",
        "description": "Endpoint for health check of Auth Micro Service",
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/api/v1/auth/admin/validateToken": {
      "get": {
        "tags": [
          "Admin"
        ],
        "summary": "Validate Token",
        "description": "Endpoint to Validate Token",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "type": "string",
            "description": "Bearer token for authentication"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/api/v1/auth/admin/login": {
      "post": {
        "tags": [
          "Admin"
        ],
        "summary": "User Login",
        "description": "Endpoint for User Login",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "user_name": {
                  "type": "string",
                  "example": "8169104556"
                },
                "password": {
                  "type": "string",
                  "example": "encyrptedPasswordHash"
                }
              }
            }
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/api/v1/auth/admin/logout": {
      "post": {
        "tags": [
          "Admin"
        ],
        "summary": "Logout User",
        "description": "Endpoint to Logout User",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "type": "string",
            "description": "Bearer token for authentication"
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/api/v1/auth/admin/getForgetPasswordOtp": {
      "post": {
        "tags": [
          "Admin"
        ],
        "summary": "Get Forgot Password Otp",
        "description": "Endpoint to Generate OTP for Forgot Password",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "mobile_number": {
                  "type": "number",
                  "example": 8169104556
                }
              }
            }
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/api/v1/auth/admin/verifyForgetPasswordOtp": {
      "post": {
        "tags": [
          "Admin"
        ],
        "summary": "Verify Forgot Password Otp",
        "description": "Endpoint to Verify OTP for Forgot Password",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "otp": {
                  "type": "number",
                  "example": 123456
                },
                "txnId": {
                  "type": "string",
                  "example": "1b99ee36-4d23-4d0a-9972-606f48bf5e33"
                }
              }
            }
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/api/v1/auth/admin/resetForgetPassword": {
      "post": {
        "tags": [
          "Admin"
        ],
        "summary": "Reset Password",
        "description": "Endpoint to Reset the Password",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "txnId": {
                  "type": "string",
                  "example": "1b99ee36-4d23-4d0a-9972-606f48bf5e33"
                },
                "newPassword": {
                  "type": "string",
                  "example": "encryptedPasswordHash"
                },
                "confirmPassword": {
                  "type": "string",
                  "example": "encryptedPasswordHash"
                }
              }
            }
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    }
  }
}